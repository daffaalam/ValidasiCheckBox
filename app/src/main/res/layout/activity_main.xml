<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.combobox.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Topping Pizza :" />

    <CheckBox
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCheck"
        android:text="Select All"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/mozarela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Mozarela" />

    <CheckBox
        android:id="@+id/sosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Sosis" />

    <CheckBox
        android:id="@+id/bawang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Bawang" />

    <CheckBox
        android:id="@+id/bakso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Bakso" />

    <CheckBox
        android:id="@+id/ayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Ayam" />

    <CheckBox
        android:id="@+id/jamur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Jamur" />

    <CheckBox
        android:id="@+id/daging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Daging" />

    <CheckBox
        android:id="@+id/salad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="allCek"
        android:text="Salad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckBox"
            android:text="check" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clear"
            android:text="clear" />

    </LinearLayout>

    <TextView
        android:id="@+id/teks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
